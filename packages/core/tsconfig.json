{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/type/",
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2018", "dom"],
    "target": "ES2018",
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
