{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "./tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build", "build"]
    },
    "circular-check": {},
    "e2e": {
      "dependsOn": ["^build", "build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
